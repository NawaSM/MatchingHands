<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F8FAFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddOpportunityActivity">

    <!-- Header Section (Same style as Profile/My Applications) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2E3FC"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Matching Hands"
            android:textColor="#1E3A8A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Create Opportunity"
            android:textColor="#1E3A8A"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Scrollable Form -->
    <ScrollView
        android:id="@+id/scrollForm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:id="@+id/previewImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder"
                    android:contentDescription="Preview Image" />
            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/uploadImageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Image"
                android:textStyle="bold"
                android:backgroundTint="#2563EB"
                android:textColor="#FFFFFF"
                android:paddingHorizontal="24dp"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/opTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Opportunity Title"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp"
                android:textColor="#111"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/opDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Date"
                    android:focusable="false"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                    android:drawablePadding="8dp"
                    android:textColor="#111"
                    android:textSize="15sp" />

                <Space
                    android:layout_width="12dp"
                    android:layout_height="match_parent" />

                <EditText
                    android:id="@+id/opTime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Select Time"
                    android:focusable="false"
                    android:padding="12dp"
                    android:background="@drawable/edittext_bg"
                    android:drawableStart="@drawable/ic_baseline_access_time_24"
                    android:drawablePadding="8dp"
                    android:textColor="#111"
                    android:textSize="15sp" />
            </LinearLayout>

            <EditText
                android:id="@+id/opDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duration (e.g. 5 Hours)"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp"
                android:textColor="#111"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/opAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:layout_marginBottom="12dp"
                android:textColor="#111"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Tags"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="4dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/tagChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:singleSelection="false"
                app:chipSpacing="6dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Health"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagEducation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Education"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagCommunity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Community Service"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagEnvironment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Environment"
                    android:checkable="true" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/tagAwareness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:text="Awareness"
                    android:checkable="true" />
            </com.google.android.material.chip.ChipGroup>

            <EditText
                android:id="@+id/opDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:hint="Description"
                android:padding="12dp"
                android:background="@drawable/edittext_bg"
                android:textColor="#111"
                android:textSize="15sp"
                android:inputType="textMultiLine"
                android:layout_marginBottom="60dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Save Button (fixed at bottom) -->
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Opportunity"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2563EB"
        android:padding="14dp"
        android:layout_margin="16dp" />
</LinearLayout>
