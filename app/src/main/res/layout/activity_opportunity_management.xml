<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F8FAFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpportunityManagementActivity">

    <!-- Header Section (Profile-style) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D2E3FC"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Matching Hands"
            android:textColor="#1E3A8A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDiscoverTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Opportunity Management"
            android:textColor="#1E3A8A"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <!-- RecyclerView List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerOpportunities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:paddingBottom="12dp" />

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addOpportunityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Opportunity"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="#FFFFFF"
        app:backgroundTint="#2563EB" />

</LinearLayout>
