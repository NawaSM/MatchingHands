<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OpportunityManagementActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#F8FAFF"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D2E3FC"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Matching Hands"
                android:textColor="#1E3A8A"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDiscoverTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Opportunity Management"
                android:textColor="#1E3A8A"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Manage Your Opportunities"
                android:textColor="#475569"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Simple Search & Sort -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:background="@android:color/white">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Search..."
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                android:textSize="14sp"
                android:textColor="#1E293B"
                android:textColorHint="#94A3B8"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="#E2E8F0" />

            <ImageView
                android:id="@+id/ivSort"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="8dp"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:contentDescription="Sort"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E2E8F0" />

        <!-- RecyclerView List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerOpportunities"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="12dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />
    </LinearLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addOpportunityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="Add Opportunity"
        android:layout_gravity="end|bottom"
        android:layout_margin="20dp"
        android:src="@android:drawable/ic_input_add"
        app:tint="#FFFFFF"
        app:backgroundTint="#2563EB" />

</FrameLayout>