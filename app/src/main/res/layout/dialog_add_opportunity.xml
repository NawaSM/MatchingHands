<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add / Edit Opportunity"
            android:textColor="#1E3A8A"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center_horizontal" />

        <!-- Opportunity Title -->
        <EditText
            android:id="@+id/opTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opportunity Title"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#111"
            android:textSize="15sp" />

        <!-- Date -->
        <EditText
            android:id="@+id/opDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date (e.g. 26/10/2025)"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#111"
            android:textSize="15sp"
            android:inputType="date" />

        <!-- Duration -->
        <EditText
            android:id="@+id/opDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Duration (e.g. 5 Hours)"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#111"
            android:textSize="15sp" />

        <!-- Location -->
        <EditText
            android:id="@+id/opLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#111"
            android:textSize="15sp" />

        <!-- Description -->
        <EditText
            android:id="@+id/opDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="top"
            android:hint="Description"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:background="@android:drawable/edit_text"
            android:textColor="#111"
            android:textSize="15sp"
            android:inputType="textMultiLine" />

        <!-- Save Button -->
        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:backgroundTint="#2563EB"
            android:layout_marginTop="6dp"
            android:padding="12dp" />
    </LinearLayout>
</ScrollView>
