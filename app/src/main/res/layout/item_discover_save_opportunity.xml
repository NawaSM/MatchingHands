<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:backgroundTint="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Image -->
        <ImageView
            android:id="@+id/opImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            android:background="@drawable/rounded_bg_light_gray" />

        <!-- Match % Badge -->
        <TextView
            android:id="@+id/opMatchBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_match_badge"
            android:text="90% Match"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@id/opImage"
            android:layout_margin="8dp" />

        <!-- Title Row (Title + Bookmark) -->
        <LinearLayout
            android:id="@+id/titleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/opImage"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Title -->
            <TextView
                android:id="@+id/opTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Opportunity Title"
                android:textColor="#1E3A8A"
                android:textStyle="bold"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- Bookmark Icon (Right of title) -->
            <ImageView
                android:id="@+id/opBookmark"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_circle_white"
                android:padding="4dp"
                android:contentDescription="bookmark"
                android:scaleType="centerInside"
                android:tint="#1E3A8A"
                app:srcCompat="@drawable/ic_bookmark_filled" />
        </LinearLayout>

        <!-- Organization -->
        <TextView
            android:id="@+id/opOrganization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Organizer Name"
            android:textColor="#475569"
            android:textSize="14sp"
            android:layout_below="@id/titleRow"
            android:layout_marginTop="4dp" />

        <!-- Tags -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/opTagGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/opOrganization"
            android:layout_marginTop="6dp"
            app:chipSpacing="6dp"
            app:singleLine="false" />

        <!-- Date & Duration Section -->
        <LinearLayout
            android:id="@+id/dateDurationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/opTagGroup"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_calendar_today_24"
                    android:tint="#475569" />

                <TextView
                    android:id="@+id/opDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="26/10/2025 (Saturday)"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:tint="#475569" />

                <TextView
                    android:id="@+id/opDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5 Hours"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_baseline_access_time_24"
                    android:tint="#475569" />

                <TextView
                    android:id="@+id/opTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:00 AM"
                    android:textColor="#475569"
                    android:textSize="13sp"
                    android:layout_marginStart="6dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
