<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="5dp"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Opportunity Image -->
        <ImageView
            android:id="@+id/opImageView"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:background="#F1F5F9"
            android:src="@drawable/ic_image_placeholder"
            android:contentDescription="Opportunity Image"
            android:layout_marginBottom="8dp" />

        <!-- Title  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/opTitleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Blood Donation Drive Volunteer"
                android:textStyle="bold"
                android:textColor="#1E3A8A"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/opLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kuala Lumpur, Malaysia"
            android:textColor="#64748B"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:drawableStart="@drawable/ic_baseline_place_24"
            android:drawablePadding="4dp"
            android:gravity="center_vertical" />
        <!-- Tags -->
        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Health"
                android:textColor="#2563EB"
                android:textSize="12sp"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_bg"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Community Service"
                android:textColor="#2563EB"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Date and Duration -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_baseline_calendar_today_24"
                app:tint="#64748B" />

            <TextView
                android:id="@+id/opDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26/10/2025 (Saturday)"
                android:textColor="#64748B"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_baseline_access_time_24"
                app:tint="#64748B" />

            <TextView
                android:id="@+id/opDurationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 Hours"
                android:textColor="#64748B"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Edit & Delete -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                app:tint="#2563EB"
                android:src="@android:drawable/ic_menu_edit" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@null"
                app:tint="#DC2626"
                android:src="@android:drawable/ic_menu_delete" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
